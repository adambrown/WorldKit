<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="org.reflections.Reflections" level="ERROR" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>